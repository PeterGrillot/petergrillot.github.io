{
  "name": "petergrillot.github.io",
  "version": "1.0.0",
  "description": "",
  "main": "index.html",
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "watch": "nodemon --watch pages --watch lib --watch styles --watch static --watch scripts --exec \"npm run dev\"",
    "build": "npx tsx ./lib/build.ts",
    "clean": "npx tsx ./lib/clean.ts",
    "dev": "DEV_MODE=true npm run build",
    "serve": "http-server build  -c-1 --port 8080",
    "start": "concurrently \"npm run watch\" \"npm run serve\"",
    "deploy": "npm run build && gh-pages -d build"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "markdown-it": "^12.3.2"
  },
  "devDependencies": {
    "@types/ejs": "^3.1.0",
    "@types/markdown-it": "^12.2.3",
    "@types/node": "^17.0.23",
    "concurrently": "^9.2.1",
    "ejs": "^4.0.1",
    "gh-pages": "^6.1.1",
    "http-server": "^14.1.0",
    "nodemon": "^3.1.4",
    "tsconfig-paths": "^3.14.1",
    "tslib": "^2.3.1",
    "tsx": "^4.19.3",
    "typescript": "^4.6.3"
  }
}
